<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.fanjie.douya.view.UserContentActivity"
    android:orientation="vertical">

    <include layout="@layout/layout_function_panel_split_bar"/>

    <LinearLayout
        style="@style/FunctionBtnLayout">
        <TextView
            android:text="头像"
            style="@style/FunctionBtnTitleText"/>
        <ImageView
            android:id="@+id/myImage"
            style="@style/UserBigImage"/>
    </LinearLayout>
    <include layout="@layout/layout_function_panel_split_bar"/>
    <LinearLayout
        style="@style/FunctionBtnLayout">
        <TextView
            android:text="昵称"
            style="@style/FunctionBtnTitleText"/>
        <TextView
            android:id="@+id/myName"
            style="@style/FunctionBtnContentText"/>
    </LinearLayout>
    <LinearLayout
        style="@style/FunctionBtnLayout">
        <TextView
            android:text="性别"
            style="@style/FunctionBtnTitleText"/>
        <TextView
            android:id="@+id/mySex"
            style="@style/FunctionBtnContentText"/>
    </LinearLayout>
    <LinearLayout
        style="@style/FunctionBtnLayout">
        <TextView
            android:text="简介"
            style="@style/FunctionBtnTitleText"/>
        <TextView
            android:id="@+id/myResume"
            style="@style/FunctionBtnContentText"/>
    </LinearLayout>
    <include layout="@layout/layout_function_panel_split_bar"/>
    <LinearLayout
        style="@style/FunctionBtnLayout">
        <TextView
            android:text="城市"
            style="@style/FunctionBtnTitleText"/>
        <TextView
            android:id="@+id/myCity"
            style="@style/FunctionBtnContentText"/>

    </LinearLayout>
</LinearLayout>
